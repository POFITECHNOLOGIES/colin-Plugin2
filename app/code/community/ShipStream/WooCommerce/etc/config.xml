<?xml version="1.0"?>
<config>
    <modules>
        <ShipStream_WooCommerce>
            <version>0.1</version>
        </ShipStream_WooCommerce>
    </modules>
    <default>
        <plugin>
            <ShipStream_WooCommerce>
                <events>
                    <delivery>
                        <committed>1</committed>
                    </delivery>
                    <inventory>
                        <adjusted>1</adjusted>
                    </inventory>
                    <shipment>
                        <packed>1</packed>
                    </shipment>
                </events>
            </ShipStream_WooCommerce>
        </plugin>
    </default>
    <phpunit>
        <suite>
            <modules>
                <ShipStream_WooCommerce />
            </modules>
        </suite>
    </phpunit>
    <adminhtml>
        <menu>
            <system>
                <children>
                    <config>
                        <children>
                            <shipstream_woocommerce translate="title" module="shipstream_woocommerce">
                                <title>ShipStream WooCommerce</title>
                                <sort_order>100</sort_order>
                                <action>adminhtml/system_config/edit/section/shipstream_woocommerce</action>
                            </shipstream_woocommerce>
                        </children>
                    </config>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <shipstream_woocommerce translate="title" module="shipstream_woocommerce">
                                            <title>ShipStream WooCommerce</title>
                                        </shipstream_woocommerce>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <sections>
        <shipstream_woocommerce translate="label" module="shipstream_woocommerce">
            <label>ShipStream WooCommerce</label>
            <tab>general</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </general>
            </groups>
        </shipstream_woocommerce>
    </sections>
</config>
